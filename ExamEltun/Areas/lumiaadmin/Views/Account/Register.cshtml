@using ExamEltun.ViewModels;
@model RegisterVM

<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Employee form</h4>
            <form class="forms-sample" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for="Name" for="exampleInputUsername1">Name</label>
                    <input asp-for="Name" class="form-control" id="exampleInputUsername1" placeholder="Name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
              <div class="form-group">
                    <label asp-for=Surname for="exampleInputUsername1">Surname</label>
                    <input asp-for="Surname" class="form-control" id="exampleInputUsername1" placeholder="Surname">
                    <span asp-validation-for="Surname" class="text-danger"></span>
                </div>
                     <div class="form-group">
                    <label asp-for=Username for="exampleInputUsername1">Username</label>
                    <input asp-for="Username" class="form-control" id="exampleInputUsername1" placeholder="Username">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                   <div class="form-group">
                    <label asp-for=Email for="exampleInputUsername1">Email</label>
                    <input asp-for="Email" class="form-control" id="exampleInputUsername1" placeholder="Email">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                   <div class="form-group">
                    <label asp-for=Password for="exampleInputUsername1">Password</label>
                    <input asp-for="Password" class="form-control" id="exampleInputUsername1" placeholder="Password">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                  <div class="form-group">
                    <label asp-for=ConfirmPassword for="exampleInputUsername1">ConfirmPassword</label>
                    <input asp-for="ConfirmPassword" class="form-control" id="exampleInputUsername1" placeholder="ConfirmPassword">
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <button type="submit" class="btn btn-primary me-2">Submit</button>
                <button class="btn btn-light">Cancel</button>
            </form>
        </div>
    </div>
</div>