@using ExamEltun.ViewModels;
@model LoginVM


<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Employee form</h4>
            <form class="forms-sample" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label asp-for=UsernameOrEmail for="exampleInputUsername1">UsernameOrEmail</label>
                    <input asp-for="UsernameOrEmail" class="form-control" id="exampleInputUsername1" placeholder="UsernameOrEmail">
                    <span asp-validation-for="UsernameOrEmail" class="text-danger"></span>
                </div>
              <div class="form-group">
                    <label asp-for=Password for="exampleInputUsername1">Password</label>
                    <input asp-for="Password" class="form-control" id="exampleInputUsername1" placeholder="Password">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
              

                <button type="submit" class="btn btn-primary me-2">Submit</button>
                <button class="btn btn-light">Cancel</button>
            </form>
        </div>
    </div>
</div>